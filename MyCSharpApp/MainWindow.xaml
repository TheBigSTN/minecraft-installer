<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:MyCSharpApp"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="MyCSharpApp.MainWindow"
        Title="MineLoader" Height="600" Width="800" Background="#FF1E1E1E" Icon="/image-1.png">
    <Window.Resources>
        <Style x:Key="ModpackButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="0,0,0,2"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Background" Value="#FF2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="4" Opacity="0.6"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#444"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#222"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Margin="10,10,10,10">
        <!-- Definim rândurile pentru TopBar și Body -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <!-- Bara de sus -->
            <!-- Conținutul principal -->
        </Grid.RowDefinitions>

        <!-- Definim coloanele pentru Sidebar și Body -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <!-- Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Conținutul principal -->
        </Grid.ColumnDefinitions>

        <ScrollViewer 
            x:Name="Sidebar" 
            VerticalScrollBarVisibility="Hidden" 
            Width="170" 
            HorizontalAlignment="Center" Grid.Row="1"
            >
            <StackPanel 
                x:Name="SidebarButtonPanel" 
                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                Grid.Row="1" Grid.Column="0" Margin="0,5,0,0"
                >
                <Button Content="Button" Style="{DynamicResource ModpackButtonStyle}"/>
                <Button Content="Button" Style="{DynamicResource ModpackButtonStyle}"/>
                <Button Content="Button" Style="{DynamicResource ModpackButtonStyle}"/>
                <Button Content="Button" Style="{DynamicResource ModpackButtonStyle}"/>
                <Button Content="Button" Style="{DynamicResource ModpackButtonStyle}"/>
                <Button Content="Button" Style="{DynamicResource ModpackButtonStyle}"/>
                <Button Content="Button" Style="{DynamicResource ModpackButtonStyle}"/>
                <Button Content="Button" Style="{DynamicResource ModpackButtonStyle}"/>
                <Button Content="Button" Style="{DynamicResource ModpackButtonStyle}"/>
                <Button Content="Button" Style="{DynamicResource ModpackButtonStyle}"/>
                <Button Content="Button" Style="{DynamicResource ModpackButtonStyle}"/>
                <Button Content="Button" Style="{DynamicResource ModpackButtonStyle}"/>
                <Button Content="Button" Style="{DynamicResource ModpackButtonStyle}"/>
            </StackPanel>
        </ScrollViewer>
        <StackPanel 
            x:Name="TopBar" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Center" 
            Width="780" 
            Orientation="Horizontal" 
            Height="49"
            Grid.ColumnSpan="2">
            <Button x:Name="Install_Button_Copy" Content="Install Modpack" Height="NaN" Foreground="White" Cursor="Hand" Width="168" VerticalAlignment="Stretch">
                <Button.Effect>
                    <DropShadowEffect/>
                </Button.Effect>
            </Button>
        </StackPanel>
        <Grid 
            x:Name="Body" 
            Grid.Column="1" Grid.Row="1" Height="515" VerticalAlignment="Center" Width="610">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid x:Name="StartInfo" Grid.Row="1" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock TextWrapping="Wrap" VerticalAlignment="Top" TextAlignment="Center" Margin="0,39,0,0" Width="500" HorizontalAlignment="Center" Height="170"><Run Foreground="White" FontSize="16" Text="Salut."/><LineBreak Foreground="White" FontSize="16"/><Run Foreground="White" FontSize="16" Text="Acesta este instalatorul meu de modpakuri de minecraft."/><LineBreak/><Run Foreground="White" FontSize="16" Text="Deoarece pentru ca un modpack de pe curseforge dureaza pana cand este acceptat si apoi adaugat pe tlmods."/><LineBreak/><Run Foreground="White" FontSize="16" Text="Mi am facut un mod manager care face fix asta."/><LineBreak/><Run Foreground="White" FontSize="16" Text="Acest mesaj in vezi probabil datorita faptului ca inca nu ai instalat nici un modpack."/><LineBreak/><Run Foreground="White" FontSize="16" Text="Pentru a continua apasa butonul de mai jos."/></TextBlock>
                <Button Content="Install Modpack" HorizontalAlignment="Center" Height="68" Margin="0,40,0,0" VerticalAlignment="Top" Width="200" Click="Install_Modpack" Grid.Row="1"/>
            </Grid>
        </Grid>
    </Grid>
</Window>