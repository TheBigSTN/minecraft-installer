<UserControl x:Class="MyCSharpApp.ModpackInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyCSharpApp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Modpack name -->
        <TextBlock x:Name="ModpackNameText" FontSize="20" Foreground="White"
               HorizontalAlignment="Center" Text="Lorem Ipsum Lorem Ipsum"
               VerticalAlignment="Center" Grid.ColumnSpan="2" Height="27" Width="236"/>

        <!-- Check for update button -->
        <Button x:Name="CheckUpdateButton" Content="Check for Updates"
            Width="180" Height="40"
            HorizontalAlignment="Center" Click="CheckUpdate_Click"
            Grid.Row="1"/>

        <!-- Update button (disabled by default) -->
    </Grid>

</UserControl>
